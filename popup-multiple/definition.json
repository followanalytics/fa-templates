{
  "template_options": {
    "technical_name": "multi_screen_template",
    "title": {
      "en": "Multi-screen",
      "fr": "Multi-écran"
    },
    "description": {
      "en": "Multi-screen template provides up to 5 pages including texts, icons, illustration images and action buttons, that can be customized in the editor of in-apps. It can be used for user's on-boarding and new features presentation.",
      "fr": "Le template multi-écran propose jusqu'à 5 écrans avec des textes, icônes, images d'illustration et boutons d'actions, qui peuvent être personnalisés dans l'éditeur des in-apps. Il peut être utilisé pour l'embarquement d'utilisateurs et pour la présentation de nouvelles fonctionnalités."
    },
    "version": "2.0.8",
    "author": "FollowAnalytics"
  },
  "sdk_options": {
    "type": "popup",
    "window": {
      "timeout": 0
    },
    "animation": {
      "entry": {
        "delay": 0.5,
        "effect": "fadeIn"
      },
      "exit": {
        "delay": 0.5,
        "effect": "fadeOut"
      }
    },
    "close_button": {
      "appear_timeout": "never"
    }
  },
