{
  "template_options": {
   "technical_name": "fullscreen_custom_template",
    "title": {
      "en": "Customized Template",
      "fr": "Template personnalisé"
    },
    "description": {
      "en": "Customized fullscreen template with a background, title, body, action buttons and images. It enables uploading images for the background and as notification media.",
      "fr": "Template plein écran personnalisé avec un arrière-plan, un titre, un corps, des boutons d'action et des images. Il permet de télécharger des images pour le arrière-plan et comme support de notification."
    },
    "version": "2.0.3",
    "author": "FollowAnalytics"
  },
  "sdk_options": {
    "type": "fullscreen",
    "window": {
      "timeout": 0
    },
    "animation": {
      "entry": {
        "delay": 0.5,
        "effect": "fadeIn"
      },
      "exit": {
        "delay": 0.5,
        "effect": "fadeOut"
      }
    },
    "close_button": {
      "appear_timeout": "never"
    }
  },
  "inputs": [
    {
      "name": "background",
      "label": {
        "en": "Background",
        "fr": "Arrière-plan"
      },
      "type": "group",
      "inputs": [
        {
          "name": "color",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "type": "color",
          "size": 35,
          "default": "#EFF4F7"
        },
        {
          "name": "image",
          "label": {
            "en": "Image",
            "fr": "Image"
          },
          "type": "image",
          "default": "./assets/images/sample-image-1.jpg",
          "tooltip": {
            "en": "Recommended image dimensions: <width> x <height>",
            "fr": "Dimensions d'image recommandées : <largeur> x <hauteur>"
          }
        }
      ]
    },
    {
      "name": "image",
      "label": {
        "en": "Image",
        "fr": "Image"
      },
      "type": "group",
      "inputs": [
        {
          "name": "upload",
          "label": {
            "en": "Upload",
            "fr": "Uploader"
          },
          "type": "image",
          "default": "./assets/images/sample-image-4.jpg",
          "tooltip": {
            "en": "Recommended image dimensions: <width> x <height>",
            "fr": "Dimensions d'image recommandées : <largeur> x <hauteur>"
          }
        }
      ]
    },
    {
      "name": "title",
      "label": {
        "en": "Title",
        "fr": "Titre"
      },
      "type": "group",
      "inputs": [
        {
          "name": "text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          },
          "type": "string",
          "default": "Your title here!",
          "min_length": 1,
          "max_length": 60
        },
        {
          "name": "font",
          "label": {
            "en": "Font",
            "fr": "Police"
          },
          "size": 67,
          "type": "enum",
          "default": "Open Sans",
          "values": [
            {"value": "Times", "caption": "Times"},
            {"value": "Raleway", "caption": "Raleway"},
            {"value": "Rockwell", "caption": "Rockwell"},
            {"value": "Open Sans", "caption": "Open Sans"},
            {"value": "Futura Bk", "caption": "Futura Book"},
            {"value": "Tekton Pro", "caption": "Tekton Pro"},
            {"value": "Montserrat", "caption": "Montserrat"}
          ]
        },
        {
          "name": "size",
          "label": {
            "en": "Size",
            "fr": "Taille"
          },
          "size": 15,
          "hide_label": true,
          "type": "number",
          "default": 24,
          "min": 19,
          "max": 32
        },
        {
          "name": "color",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "size": 18,
          "hide_label": true,
          "type": "color",
          "default": "#5f7384"
        }
      ]
    },
    {
      "name": "body",
      "label": {
        "en": "Body",
        "fr": "Corps"
      },
      "type": "group",
      "inputs": [
        {
          "name": "text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          },
          "type": "string",
          "default": "Lorem ipsum dolor sit amet, vel libris scripta et, iudico detracto consetetur et duo. Te bonorum facilis vix. Ut est legere insolens adipisci, sed ubique aliquam no. In habeo harum duo.",
          "max_length": 200,
          "lines": 5
        },
        {
          "name": "font",
          "label": {
            "en": "Font",
            "fr": "Police"
          },
          "size": 67,
          "type": "enum",
          "default": "Open Sans",
          "values": [
            {"value": "Times", "caption": "Times"},
            {"value": "Raleway", "caption": "Raleway"},
            {"value": "Rockwell", "caption": "Rockwell"},
            {"value": "Open Sans", "caption": "Open Sans"},
            {"value": "Futura Bk", "caption": "Futura Book"},
            {"value": "Tekton Pro", "caption": "Tekton Pro"},
            {"value": "Montserrat", "caption": "Montserrat"}
          ]
        },
        {
          "name": "size",
          "label": {
            "en": "Size",
            "fr": "Taille"
          },
          "size": 15,
          "hide_label": true,
          "type": "number",
          "default": 15,
          "min": 13,
          "max": 19
        },
        {
          "name": "color",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "size": 18,
          "hide_label": true,
          "type": "color",
          "default": "#5f7384"
        }
      ]
    },
    {
      "name": "close",
      "label": {
        "en": "Close Button",
        "fr": "Bouton Fermer"
      },
      "type": "group",
      "inputs": [
        {
          "name": "color",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "type": "color",
          "size": 35,
          "default": "#FFFFFF"
        }
      ]
    },
    {
      "name": "buttons",
      "label": {
        "en": "Buttons",
        "fr": "Boutons"
      },
      "type": "table",
      "min_size": 1,
      "max_size": 3,
      "inputs": [
        {
          "name": "text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          },
          "type": "string",
          "default": "Button 1",
          "min_length": 1,
          "max_length": 25
        },
        {
          "name": "font_family",
          "label": {
            "en": "Font",
            "fr": "Police"
          },
          "size": 64,
          "type": "enum",
          "default": "Open Sans",
          "values": [
            {"value": "Times", "caption": "Times"},
            {"value": "Raleway", "caption": "Raleway"},
            {"value": "Rockwell", "caption": "Rockwell"},
            {"value": "Open Sans", "caption": "Open Sans"},
            {"value": "Futura Bk", "caption": "Futura Book"},
            {"value": "Tekton Pro", "caption": "Tekton Pro"},
            {"value": "Montserrat", "caption": "Montserrat"}
