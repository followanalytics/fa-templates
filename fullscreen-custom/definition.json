          "default": 17,
          "min": 14,
          "max": 19
        },
        {
          "name": "font_color",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "size": 20,
          "hide_label": true,
          "type": "color",
          "default": "#FFFFFF"
        },
        {
          "name": "background",
          "label": {
            "en": "Background",
            "fr": "Arrière-plan"
          },
          "size": 40,
          "type": "color",
          "default": "#5f7384"
        },
        {
          "name": "deeplink_url",
          "label": {
            "en": "Deeplink Url",
            "fr": "Url de Deeplink"
          },
          "type": "string"
        }
      ]
    }
  ]
}
